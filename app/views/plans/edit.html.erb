    
    <div class="main posts-new">
      <div class="container">
        <h1 class="form-heading">プランを編集する</h1>
        
              <% if @plan.errors.any? %>
                <div id="error_explanation">
                  <ul>
                  <% @plan.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
      
          <%= form_for @plan,:url => {:controller => :plans ,:action => :update} do |f| %>
          <div class="form">
            <div class="form-body">
              <div class="field">
                <%= f.label :プラン名 %><br>
                <%= f.text_field :plan_name %>
              </div>
      

              <div class="field">
                <%= f.fields_for :posts do |posts_form| %>
                <%= render 'post_fields', f: posts_form %>　
                <% end %>
                <div id=link>
                <%= link_to_add_association "行先追加", f, :posts %><br/>
                </div>
              </div>
          
 
  
              <%= f.submit "更新" %>
            </div>
          <% end %>
          </div>
      </div>
    </div>

