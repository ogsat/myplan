<!--プラン一覧表示画面-->
<div class="main posts-index">
  <div class="container">
    <% @plans.each do |plan| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{plan.user.image_name}" %>">
        </div>
        <div class="post-right">
          <%= link_to(plan.plan_name, "/plans/#{plan.id}") %>
        </div>
      </div>
    <% end %>
    <%= paginate @plans %>
  </div>
</div>
